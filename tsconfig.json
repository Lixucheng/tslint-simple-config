{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "lib",
        "diagnostics": true,
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "lib": ["es5", "es2015.promise", "dom"]
    },
    "exclude": ["./node_modules"],
    "include": ["./rules/*"]
}
